<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("./layout/layout.css.ejs") %>
</head>

<body>

    <%- include("./layout/layout.header.ejs") %>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="m-0 font-weight-bold text-primary">Quản lý lớp</h6>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <a style="text-align: right;" class="dropdown-item" href="#" data-toggle="modal"
                            data-target="#addcate">
                            <i class="fas fa-plus-square" style='font-size:20px; color: 
                        #4e73df;'></i> Thêm mới
                        </a>
                    </div>
                </div>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID lớp</th>
                                <th>Tên lớp</th>
                                <th>Số sinh viên</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% ds_lop.rows.forEach(function(ds_lop){ %>
                                <tr>
                                    <td>
                                        <%= ds_lop.IDlop %>
                                    </td>
                                    <td>

                                        <%= ds_lop.tenlop %>
                                    </td>
                                    <td>

                                        <%= ds_lop.sosinhvien %>
                                    </td>
                                    <td>
                                       
                                           
                                            <ul style="list-style: none;display: flex;">
                                                <li> <a  href="#" data-toggle="modal"
                                                        data-target="#detailcate<%=ds_lop.IDlop %>">
                                                        <i class="fas fa-eye"
                                                            style='font-size:20px; color: lightsalmon;'></i>&nbsp;&nbsp;&nbsp;
                                                    </a>
                                                </li>

                                                <li> <a  href="#" data-toggle="modal"
                                                        data-target="#updatecate<%=ds_lop.IDlop %>">
                                                        <i class='fas fa-pencil-ruler'
                                                            style='font-size:20px; color: blue;'></i>&nbsp;&nbsp;&nbsp; 
                                                    </a>
                                                </li>
                                                <li> <a 
                                                        href="./lop/xoa_lop/<%= ds_lop.IDlop %>"
                                                        onclick=" confirm('Are you sure you want to delete this item?');"><i
                                                            class="fas fa-trash"
                                                            style='font-size:20px; color: 	#FF3333;'></i>&nbsp;&nbsp;&nbsp; </a>
                                                </li>
                                            </ul>
                                       
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
       
        <% ds_lop.rows.forEach(function(ds_lop){ %>
            <form action="/quanly/lop/sua_lop/<%=ds_lop.IDlop %>" method="POST"
                enctype="application/x-www-form-urlencoded">
                <div class="modal fade" id="updatecate<%=ds_lop.IDlop %>" tabindex="-1"
                    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật lớp
                                </h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">ID lop</label>
                                    <input type="text" class="form-control" name="IDlop"
                                        value="<%=ds_lop.IDlop %>">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Tên lớp</label>
                                    <input type="text" class="form-control" name="tenlop"
                                        value="<%=ds_lop.tenlop %>">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Số sinh viên</label>
                                    <input type="text" class="form-control" name="sosinhvien"
                                        value="<%=ds_lop.sosinhvien %>">
                                </div>
                               
                            
                                <button type="submit" class="btn btn-primary">Cập nhật</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="/quanly/lop" class="btn btn-primary">Trở lại</a>
                            </div>

                        </div>
                    </div>
                </div>
            </form>

            
             <div class="modal fade" id="detailcate<%=ds_lop.IDlop %>" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi tiết lớp</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>ID lớp</th>
                                        <td>
                                            <%= ds_lop.IDlop %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Tên lớp</th>
                                        <td>
                                            <%= ds_lop.tenlop %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Số sinh viên </th>
                                        <td>
                                            <%= ds_lop.sosinhvien %>
                                        </td>

                                    </tr>
                                    
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div> 

            <% }); %>
                <form action="/quanly/lop/them_lop" method="POST" enctype="application/x-www-form-urlencoded">

                    <div class="modal fade" id="addcate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Thêm mới lớp</i></h5>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">ID lớp</label>
                                        <input type="text" class="form-control" name="IDlop">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Tên lớp</label>
                                        <input type="text" class="form-control" name="tenlop">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Số sinh viên</label>
                                        <input type="number" class="form-control" name="sosinhvien">
                                    </div>
                                   
                                    <button type="submit" class="btn btn-primary">Thêm mới
                                        </button>&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="/quanly/lop" class="btn btn-primary">Trở lại</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>




                <%- include("./layout/layout.footer.ejs") %>
                    <%- include("./layout/layout.js.ejs") %>
</body>


</html>